{% extends "base.html.twig" %}


        {% block body %}

            <div class="container">

                <ol class="breadcrumb">
                    <li><a href="index.html">Accueil</a></li>
                    <li><a href="index.html">Gérer mes contrats</a></li>
                    <li class="active">Modifier le contrat {{ contrat.intitule }}</li>
                </ol>

                <div class="row">

                    <!-- Article main content -->
                    <article class="col-xs-12 maincontent">
                        <header class="page-header">
                            <h1 class="page-title">Modifier un contrat</h1>
                        </header>

                        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <h3 class="thin text-center">Modifier un contrat</h3>

                                    <hr>
                                    {{ form_start(form) }}
                                    <div class="top-margin">
                                        {{ form_label(form.intitule, 'Intitulé du contrat',{'attr': {'class': 'text-danger'}} ) }}
                                        {{ form_widget(form.intitule, {'attr': {'class': 'form-control','value': contrat.intitule}}) }}
                                    </div>
                                    <div class="top-margin">
                                        {{ form_label(form.url, 'URL du fichier PDF',{'attr': {'class': 'text-danger'}} ) }}
                                        {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="top-margin">
                                        {{ form_label(form.numClient, 'Nom du client destinataire',{'attr': {'class': 'text-danger'}} ) }}
                                        {{ form_widget(form.numClient, {'attr': {'class': 'form-control','disabled':'disabled','value': contrat.numClient.nom}}) }}
                                    </div>

                                    <div class="top-margin">
                                        {{ form_label(form.type, 'Type de contrat',{'attr': {'class': 'text-danger'}} ) }}
                                        {{ form_widget(form.type, {'attr': {'class': 'form-control','value': contrat.type} }) }}
                                    </div>
                                    <hr>
                                    {{ form_widget(form) }}
                                    <div class="row">

                                        <div class="col-lg-4 text-right">
                                            <button class="btn btn-action" type="submit">Envoyer</button>
                                        </div>
                                    </div>




                                    {{ form_end(form) }}
                                </div>
                            </div>

                        </div>

                    </article>
                    <!-- /Article -->

                </div>
            </div>	<!-- /container -->
        {% endblock %}