{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container">

    <ol class="breadcrumb">
        <li><a href="index.html">Home</a></li>
        <li class="active">Connexion</li>
    </ol>

    <div class="row">

        <!-- Article main content -->
        <article class="col-xs-12 maincontent">
            <header class="page-header">
                <h1 class="page-title">Se connecter</h1>
            </header>

            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h3 class="thin text-center">Se connecter à votre compte</h3>
                        <p class="text-center text-muted">Vous n'avez pas encore de compte ? Créez-en un ! <a href="{{ path('service_registration') }}"> en tant qu'Entreprise</a> ou  <a href="{{ path('client_registration') }}">Client</a>  </p>
                        <hr>

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="top-margin">
    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" class="form-control" id="username" name="_username" placeholder="Username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>
    <div class="top-margin">
    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" class="form-control" id="password" name="_password" placeholder="Password" required="required" autocomplete="current-password" />
    </div>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    <hr>
    <div class="col-lg-4 text-right">
    <input type="submit" id="_submit" class="btn btn-action" name="_submit" value="{{ 'security.login.submit'|trans }}" />

    </div>
</form>
                    </div>
                </div>

            </div>

        </article>
        <!-- /Article -->

    </div>
</div>	<!-- /container -->